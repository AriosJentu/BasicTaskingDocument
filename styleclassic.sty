% Page numbering
\pagestyle{fancy}
\fancyhf{}
\rfoot{\thepage}
\renewcommand{\headrulewidth}{1pt}
\renewcommand{\footrulewidth}{0pt}
\fancyheadoffset{10mm}
\fancyfootoffset{0mm}
\setlength{\headheight}{21pt}

% Make new part command
\newcommand{\newpart}[1]{
	\pagebreak

	{
		\thispagestyle{empty}
		\vspace*{50pt}
		\part{#1}
	}

	\pagebreak
}

% Sections font size
\titleformat*{\section}{\normalfont \large \bfseries \centering}
\titleformat*{\subsection}{\normalfont \bfseries \centering}

% Table of contents
\dottedcontents{section}[1.7em]{\vspace{2pt} \bfseries}{1.7em}{1pc}
\dottedcontents{subsection}[2.5em]{}{2.5em}{1pc}
\setcounter{tocdepth}{2}

%Disable section numbering
\renewcommand\thesection{}
\renewcommand\thesubsection{}

\renewcommand{\labelenumii}{\theenumii}
\renewcommand{\theenumii}{\theenumi.\arabic{enumii}.}